{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "associationName": {
      "type": "string",
      "defaultValue": "vmHeartbeatAssociation"
    },
    "dcrResourceId": {
      "type": "string"
    },
    "vmResourceId": {
      "type": "string",
      "metadata": {
        "description": "The full resource ID of the Virtual Machine to associate with the DCR."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "associateDCRToVM",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Insights/dataCollectionRuleAssociations",
              "apiVersion": "2023-03-11",
              "name": "[parameters('associationName')]",
              "properties": {
                "description": "Cross-RG DCR association",
                "dataCollectionRuleId": "[parameters('dcrResourceId')]"
              }
            }
          ]
        }
      },
      "scope": "[parameters('vmResourceId')]"
    }
  ]
}
