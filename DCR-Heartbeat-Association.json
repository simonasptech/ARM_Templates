{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmResourceId": {
      "type": "string"
    },
    "dcrResourceId": {
      "type": "string"
    },
    "associationName": {
      "type": "string",
      "defaultValue": "vmHeartbeatAssociation"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Insights/dataCollectionRuleAssociations",
      "apiVersion": "2023-03-11",
      "name": "[parameters('associationName')]",
      "scope": "[parameters('vmResourceId')]",
      "properties": {
        "description": "Cross-RG DCR association",
        "dataCollectionRuleId": "[parameters('dcrResourceId')]"
      }
    }
  ],
  "outputs": {
    "associationId": {
      "type": "string",
      "value": "[format('{0}/providers/Microsoft.Insights/dataCollectionRuleAssociations/{1}', parameters('vmResourceId'), parameters('associationName'))]"
    }
  }
}
