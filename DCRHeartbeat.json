{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "workspaceResourceId": {
      "type": "string",
      "metadata": {
        "description": "The full resource ID of the Log Analytics workspace (e.g., /subscriptions/.../resourceGroups/.../providers/Microsoft.OperationalInsights/workspaces/...). Used for DCE."
      }
    },
    "lawName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Log Analytics workspace. This is used to create the DCR and associate it with the VM."
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Virtual Machine to associate this DCR with."
      }
    },
    "dcrName": {
      "type": "string",
      "defaultValue": "heartbeatDCR",
      "metadata": {
        "description": "Name of the Data Collection Rule."
      }
    },
    "dcrAssociationName": {
      "type": "string",
      "defaultValue": "vmHeartbeatAssociation",
      "metadata": {
        "description": "Name of the DCR Association."
      }
    },
    "vmResourceId": {
      "type": "string",
      "metadata": {
        "description": "vmResourceId is the full resource ID of the Virtual Machine. This is used to associate the DCR with the VM."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Insights/dataCollectionRules",
      "apiVersion": "2022-06-01",
      "name": "[parameters('dcrName')]",
      "location": "[parameters('location')]",
      "properties": {
        "dataSources": {
          "performanceCounters": [
            {
              "streams": [
                "Microsoft-Perf"
              ],
              "samplingFrequencyInSeconds": 300,
              "counterSpecifiers": [
                "\\Processor(_Total)\\% Processor Time"
              ],
              "name": "heartbeatPerfCounters"
            }
          ]
        },
        "destinations": {
          "logAnalytics": [
            {
              "workspaceResourceId": "[parameters('workspaceResourceId')]",
              "name": "[parameters('lawName')]"
            }
          ]
        },
        "dataFlows": [
          {
            "streams": [
              "Microsoft-Perf"
            ],
            "destinations": [
              "[parameters('lawName')]"
            ]
          }
        ]
      }
    },
    {
      "type": "Microsoft.Insights/dataCollectionRuleAssociations",
      "apiVersion": "2023-03-11",
      "name": "[parameters('dcrAssociationName')]",
      "scope": "[parameters('vmResourceId')]",
      "properties": {
        "description": "Association for heartbeat DCR",
        "dataCollectionRuleId": "[subscriptionResourceId('Microsoft.Insights/dataCollectionRules', parameters('dcrName'))]"
      },
      "dependsOn": [
        "[subscriptionResourceId('Microsoft.Insights/dataCollectionRules', parameters('dcrName'))]"
      ]
    }
  ],
  "outputs": {
    "dcrId": {
      "type": "string",
      "value": "[subscriptionResourceId('Microsoft.Insights/dataCollectionRules', parameters('dcrName'))]"
    },
    "dcrAssociationId": {
      "type": "string",
      "value": "[format('{0}/providers/Microsoft.Insights/dataCollectionRuleAssociations/{1}', parameters('vmResourceId'), parameters('dcrAssociationName'))]"
    }
  }
}
